<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nl.tudelft.ewi.ds.bankchain.activities.RecentTransactionsActivity">

    <include layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="114dp">

        <Button
            android:id="@+id/recentTransactionActivityButton"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:onClick="startRecentTransactionActivity"
            android:text="View recent transactions"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/newVerification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="32dp"
            android:layout_marginEnd="32dp"
            android:src="@drawable/ic_new_verification"
            app:backgroundTint="@color/colorPrimary"
            app:elevation="4dp" />


    </RelativeLayout>


    <EditText
        android:id="@+id/ibanInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:hint="@string/iban"
        android:inputType="text"
            android:layout_above="@+id/challengeInput"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/challengeInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:hint="@string/verify_challenge"
        android:inputType="text"
        android:layout_above="@+id/manualVerificationButton"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/manualVerificationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="164dp"
        android:text="@string/respond" />


    <EditText
        android:id="@+id/response"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:hint="@string/recieved_response"
        android:inputType="text"
        android:layout_above="@+id/manualResponseButton"
        android:layout_alignStart="@+id/manualResponseButton" />

    <EditText
        android:id="@+id/publicKeyInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:hint="@string/public_key"
        android:inputType="text"
        android:layout_above="@+id/response"
        android:layout_alignStart="@+id/response" />

    <Button
        android:id="@+id/manualResponseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/verify"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/challengeInput" />


</RelativeLayout>
